{
  "mcpServers": {
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://postgres:postgres@localhost:5432/lider_garant"
      ],
      "env": {}
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "YOUR_GITHUB_PERSONAL_ACCESS_TOKEN"
      }
    },
    "redis": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-redis",
        "redis://localhost:6379"
      ],
      "env": {}
    },
    "docker": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-server-docker"
      ],
      "env": {}
    },
    "sentry": {
      "command": "npx",
      "args": [
        "-y",
        "@getsentry/sentry-mcp"
      ],
      "env": {
        "SENTRY_AUTH_TOKEN": "YOUR_SENTRY_AUTH_TOKEN"
      }
    },
    "openapi": {
      "command": "npx",
      "args": [
        "-y",
        "openapi-mcp-server"
      ],
      "env": {}
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {}
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "env": {}
    },
    "think": {
      "command": "npx",
      "args": [
        "-y",
        "think-mcp"
      ],
      "env": {}
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "YOUR_UPSTASH_API_KEY"
      ],
      "env": {}
    },
    "filestash": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--name",
        "filestash-mcp",
        "-p",
        "8334:8334",
        "mickaelkerjean/filestash:latest",
        "--options",
        "provider.s3.endpoint=http://localhost:9000,provider.s3.access_key_id=minioadmin,provider.s3.secret_access_key=minioadmin,provider.s3.region=us-east-1,provider.s3.bucket=documents"
      ],
      "env": {}
    },
    "django-rest": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "http://localhost:8000/mcp/",
        "--transport",
        "http-only"
      ],
      "env": {}
    }
  }
}