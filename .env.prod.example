# =============================================================================
# Production Environment Variables Template
# =============================================================================
# Copy this file to .env.prod and fill in the values
# NEVER commit .env.prod to git!
# =============================================================================

# =============================================================================
# SECURITY - REQUIRED
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-super-secret-key-here-generate-new-one

# =============================================================================
# DATABASE
# =============================================================================
DB_NAME=lider_garant
DB_USER=postgres
DB_PASSWORD=your-strong-database-password-here
DB_HOST=db
DB_PORT=5432

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# DOMAIN CONFIG
# =============================================================================
ALLOWED_HOSTS=.lider-garant.ru,lk.lider-garant.ru
CORS_ALLOWED_ORIGINS=https://lk.lider-garant.ru

# =============================================================================
# BANK API (REALIST BANK)
# =============================================================================
BANK_API_URL=https://stagebg.realistbank.ru/agent_api1_1
BANK_API_LOGIN=your-bank-login
BANK_API_PASSWORD=your-bank-password

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================
# Set to False if Nginx handles SSL redirect
SECURE_SSL_REDIRECT=False

# JWT Token Lifetimes
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=7
