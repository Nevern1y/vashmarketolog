# ===========================================
# Lider Garant - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Backend Configuration
DJANGO_SETTINGS_MODULE=config.settings.development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# Database
DB_NAME=lider_garant
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis (for WebSockets/Channels)
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO S3 Storage
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=lider-garant

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001,https://lider-garant.ru,https://www.lider-garant.ru
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,lider-garant.ru,www.lider-garant.ru

# ===========================================
# Email
DEFAULT_FROM_EMAIL=info@lider-garant.ru

# Bank API (Realist Bank) - Phase 2
# ===========================================
# Получить логин/пароль у банка-партнера
BANK_API_URL=https://stagebg.realistbank.ru/agent_api1_1
BANK_API_LOGIN=your_bank_login
BANK_API_PASSWORD=your_bank_password

# Email Configuration (SMTP)
# Раскомментируйте EMAIL_BACKEND для отправки реальных писем в разработке
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Настройки для Яндекс.Почты (для домена) / Yandex Connect
EMAIL_HOST=smtp.yandex.ru
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_HOST_USER=info@lider-garant.ru
EMAIL_HOST_PASSWORD=пароль_приложения_здесь
